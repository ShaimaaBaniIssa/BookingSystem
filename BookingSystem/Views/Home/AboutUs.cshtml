@model Aboutusdatum

@{
    ViewData["Title"] = "AboutUs";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>About Us</h2>
                    <div class="bt-option">
                        <a asp-action="Index">Home</a>
                        <span>About Us</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->
<!-- About Us Page Section Begin -->
<section class="aboutus-page-section spad">
    <div class="container">
        <div class="about-page-text">
            <div class="row">
                <div class="col-lg-6">
                    <div class="ap-title">
                        <h2>@Model.Title</h2>
                        <p>
                            @Model.Description
                        </p>
                    </div>
                </div>
                <div class="col-lg-5 offset-lg-1">
                    <ul class="ap-services">
                        <li><i class="icon_check"></i> 20% Off On Accommodation.</li>
                        <li><i class="icon_check"></i> Complimentary Daily Breakfast</li>
                        <li><i class="icon_check"></i> 3 Pcs Laundry Per Day</li>
                        <li><i class="icon_check"></i> Free Wifi.</li>
                        <li><i class="icon_check"></i> Discount 20% On F&B</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="about-page-services">
            <div class="row">
                <div class="col-md-4">
                    <div class="ap-service-item set-bg" data-setbg=@($"../Images/Project/AboutUs/{Model.Imgpath1}")>
                        <div class="api-text">
                            <h3>@Model.ImgTitle1</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="ap-service-item set-bg" data-setbg=@($"../Images/Project/AboutUs/{Model.Imgpath2}")>
                        <div class="api-text">
                            <h3>@Model.ImgTitle2</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="ap-service-item set-bg" data-setbg=@($"../Images/Project/AboutUs/{Model.Imgpath3}")>
                        <div class="api-text">
                            <h3>@Model.ImgTitle3</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- About Us Page Section End -->
<!-- Video Section Begin -->
<section class="video-section set-bg" data-setbg=@($"../Images/Project/AboutUs/{Model.Imgpath4}")>
    
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="video-text">
                    <h2>Discover Our Hotel & Services.</h2>
                    <p>It S Hurricane Season But We Are Visiting Hilton Head Island</p>
                    <a href="https://www.youtube.com/watch?v=EzKkl64rRbM" class="play-btn video-popup">
                        <img src="~/Images/Project/AboutUs/play.png" alt="">
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Video Section End -->
<!-- Gallery Section Begin -->
<section class="gallery-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Rooms</span>
                    <h2>Discover Our Rooms</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="gallery-item set-bg" data-setbg=@($"../Images/Room/{ViewBag.Rooms[0].Imagepath}")>
                    <div class="gi-text">
                        <h3>@ViewBag.Rooms[0].Roomtype</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="gallery-item set-bg" data-setbg=@($"../Images/Room/{ViewBag.Rooms[1].Imagepath}")>
                            <div class="gi-text">
                                <h3>@ViewBag.Rooms[1].Roomtype</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="gallery-item set-bg" data-setbg=@($"../Images/Room/{ViewBag.Rooms[2].Imagepath}")>
                            <div class="gi-text">
                                <h3>@ViewBag.Rooms[2].Roomtype</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="gallery-item large-item set-bg" data-setbg=@($"../Images/Room/{ViewBag.Rooms[3].Imagepath}")>
                    <div class="gi-text">
                        <h3>@ViewBag.Rooms[3].Roomtype</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Gallery Section End -->

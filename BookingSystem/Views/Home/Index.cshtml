<!-- Hotel Section Begin -->
<section class="blog-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Hotel News</span>
                    <h2>Our Hotels</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach(var item in Model.Item1){
            <div class="col-lg-4">
                    <div class="blog-item set-bg" data-setbg=@Url.Content("~/Images/Hotel/" + item.Imagepath)>
                    <div class="bi-text">
                        <h4><a asp-action="Rooms" asp-route-hotelId="@item.Hotelid">@item.Name</a></h4>
                            <div class="b-time"><i class="icon_map_alt"></i>@item.Address</div>
                    </div>
                </div>
            </div>
            }
            
        </div>
        <div class="col-lg-12">
            <div class="room-pagination">
                <a asp-action="Index" asp-route-pageNumber="1">1</a>
                <a asp-action="Index" asp-route-pageNumber="2">2</a>
                <a asp-action="Hotels" >See All</a>

            </div>

@model Tuple<IEnumerable<Hotel>, IEnumerable<Testimonial>,Homedatum>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    var userId = Context.Session.GetString("Id");
    IEnumerable<SelectListItem> result;

}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(function () {

        $('#hotelselectlist').change(function () {
            window.location.href = "/Home/Index?hotelId=" + $(this).val();
        })
    });
</script>
<!-- Hero Section Begin -->
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="hero-text">
                    <h1>@Model.Item3.Title</h1>
                    <p>
                       @Model.Item3.Description
                    </p>
                    <a  class="primary-btn" asp-action="About Us">Discover Now</a>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
                <div class="booking-form">
                    <h3>Booking Your Hotel</h3>
                    <form asp-action="BookRoom" >
                        <input name="source" value="home" hidden>

                        <div class="select-option">
                            <label for="hotel">Hotel:</label>
                            <select name="hotelId" asp-items="ViewBag.HotelNames" id="hotelselectlist">
                                @if(ViewBag.Hotel != null)
                                {
                                    <option value="@ViewBag.Hotel.Hotelid" selected>@ViewBag.Hotel.Name</option>

                                }
                            </select>
                        </div>
                        <div class="select-option">
                            <label for="secondDropdown">Room Type:</label>
                            <select name="roomId" asp-items="ViewBag.RoomsType" id="roomTypes">
                            </select>
                        </div>
                     
                        <div class="check-date">
                            <label for="date-in">Check In:</label>
                            <input type="text" class="date-input" id="date-in" name="checkIn">
                            <i class="icon_calendar"></i>
                        </div>
                        <div class="check-date">
                            <label for="date-out">Check Out:</label>
                            <input type="text" class="date-input" id="date-out" name="checkOut">
                            <i class="icon_calendar"></i>
                        </div>
                        <div class="select-option">
                            <label for="numOfPersons">Number Of Persons:</label>
                            
                            <select name="numOfPersons" id="numOfPersons">
                                <option value="">--Choose an option--</option>
                                <option value="1">1 Person</option>
                                <option value="2">2 Persons</option>
                                <option value="3">3 Persons</option>
                                <option value="4">4 Persons</option>
                                <option value="5">5 Persons</option>
                                <option value="6">6 Persons</option>
                                <option value="7">7 Persons</option>

                            </select>
                        </div>
                        
                        @if (userId != null)
                        {
                            <button type="submit">Book Now</button>
                            <button asp-action="BookRoom" asp-route-payLater="true">Save and pay later</button>


                        }
                        else
                        {
                            <button disabled type="submit">Book Now</button>

                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="hero-slider owl-carousel">
        <div class="hs-item set-bg" data-setbg=@($"../Images/Project/Home/{Model.Item3.Imgpath1}")></div>
        <div class="hs-item set-bg" data-setbg=@($"../Images/Project/Home/{Model.Item3.Imgpath2}")></div>
        <div class="hs-item set-bg" data-setbg=@($"../Images/Project/Home/{Model.Item3.Imgpath3}")></div>
    </div>
</section>
<!-- Hero Section End -->

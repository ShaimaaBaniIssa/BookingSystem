@model IEnumerable<BookingSystem.Models.Aboutusdatum>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Image 1
            </th>
            <th>
                Image 2
            </th>
            <th>
                Image 3
            </th>
            <th>
                Image 4
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgTitle1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgTitle2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgTitle3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgTitle4)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @item.Title.Substring(0, 10)
            </td>
            <td>
                @item.Description.Substring(0,20)
            </td>
            <td>
                    <img src=@Url.Content("~/Images/Project/AboutUs/" + item.Imgpath1) asp-append-version="true" style="border-radius:20%;" width="100" height="100" />
                </td>
            <td>
                    <img src=@Url.Content("~/Images/Project/AboutUs/" + item.Imgpath2) asp-append-version="true" style="border-radius:20%;" width="100" height="100" />
                </td>
            <td>
                    <img src=@Url.Content("~/Images/Project/AboutUs/" + item.Imgpath3) asp-append-version="true" style="border-radius:20%;" width="100" height="100" />
                </td>
            <td>
                    <img src=@Url.Content("~/Images/Project/AboutUs/" + item.Imgpath4) asp-append-version="true" style="border-radius:20%;" width="100" height="100" />
                </td>
            <td>
                    @item.ImgTitle1.Substring(0,10)
            </td>
            <td>
                    @item.ImgTitle2.Substring(0, 10)
            </td>
            <td>
                    @item.ImgTitle3.Substring(0, 10)
            </td>
            <td>
                    @item.ImgTitle4.Substring(0, 10)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

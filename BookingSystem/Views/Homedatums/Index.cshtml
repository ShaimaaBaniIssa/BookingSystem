@model IEnumerable<BookingSystem.Models.Homedatum>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DarkLogo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageFile1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageFile2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageFile3)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <img src=@Url.Content("~/Images/Project/Home/" + item.Logopath) asp-append-version="true" style="border-radius:20%;" width="100" height="100" />

            </td>
                <td>
                    <img src=@Url.Content("~/Images/Project/Home/" + item.DarkLogopath) asp-append-version="true" style="border-radius:20%;" width="100" height="100" />

                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @item.Description.Substring(0,20)
            </td>
            <td>
                    <img src=@Url.Content("~/Images/Project/Home/" + item.Imgpath1) asp-append-version="true" style="border-radius:20%;" width="100" height="100" />

            </td>
            <td>
                    <img src=@Url.Content("~/Images/Project/Home/" + item.Imgpath2) asp-append-version="true" style="border-radius:20%;" width="100" height="100" />
                </td>
            <td>
                    <img src=@Url.Content("~/Images/Project/Home/" + item.Imgpath3) asp-append-version="true" style="border-radius:20%;" width="100" height="100" />
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HomeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HomeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HomeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
